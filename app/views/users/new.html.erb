<div class="row">
    <div class="span6 offset3">

    	<h1>Sign up</h1>

    	<%= form_for(@user) do |f| %>
			<% unless @user.errors.count == 0   %>
				<div data-alert class="alert-box warning">
  					The form contains <%= pluralize(@user.errors.count, "error") %>.
					<% @user.errors.full_messages.each do |msg| %>
 	 					<li><%= msg %></li>
					<% end %>
					<!-- <a href="/signup" class="close">&times;</a> -->
				</div>
			<% end %>
      	<% end %>

    	<%= form_for (@user) do |user| %>
	    	<%=	user.text_field :name, placeholder: "name" %>
	    	<%=	user.text_field :email, placeholder: "email" %>
	    	<%= user.password_field :password, placeholder: "password" %>
	    	<%= user.password_field :password_confirmation, placeholder: "confirm password" %>

	    	<div class="row">
  				<div class="small-6 small-centered columns">
	    			<%= user.button "create" %>
	    		</div>
	    	</div>
	    	
    	<% end %>


    </div>
</div>