
<div class="form-elements">
  <%= f.label :title, t("activerecord.attributes.video.title", :default => "Title"), :class => :label %>
  <%= f.text_field :title, :class => 'text_field', :id => 'title' %>
</div>

<div class="form-elements">
  <%= f.label :description, t("activerecord.attributes.video.description", :default => "Description"), :class => :label %>
  <%= f.text_field :description, :class => 'text_field', :id => 'description' %>
</div>


<!-- when coming from new.html.erb -->
<% if @video.new_record? %>
  <button class="button" type="submit">
    Step 2
  </button>

<!-- when coming from edit.html.erb -->
<%else%>
  <button class="button" type="submit">
    Save
  </button>

<%end%>

  <span class="text_button_padding">or</span>
	<%= link_to "Cancel", videos_path, :class => "text_button_padding link_button" %>
</div>